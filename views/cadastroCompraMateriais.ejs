                                <option value="medidaGrama">Grama</option>
                                <option value="medidaUnidade">Unidade</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="inputPesoOuQuantidade">Peso</label>
                            <input type="text" class="form-control tamanhoCamposCadastroMateriais" id="inputPeso">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group" style="margin-left: 26px;">
